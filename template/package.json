{
  "name": "nextjs-simple-blog-template",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "dev:indexing": "pagefind --site out --output-path public/pagefind",
    "build": "next build && pagefind --site out --output-path out/pagefind",
    "postbuild": "next-sitemap",
    "start": "next start",
    "lint": "next lint",
    "format": "prettier --write --ignore-path .gitignore './**/*.{js,jsx,ts,tsx,json,css}'",
    "check-license": "license-checker --summary | grep -qvzi gpl"
  },
  "prettier": {
    "trailingComma": "all",
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true,
    "jsxSingleQuote": false,
    "printWidth": 100
  },
  "engines": {
    "node": ">=18.x"
  },
  "dependencies": {
    "@types/cheerio": "^0.22.31",
    "@types/node": "18.15.3",
    "@types/react": "18.0.28",
    "@types/react-dom": "18.0.11",
    "cheerio": "^1.0.0-rc.12",
    "date-fns": "^2.29.3",
    "date-fns-tz": "^2.0.0",
    "encoding": "^0.1.13",
    "eslint": "8.36.0",
    "eslint-config-next": "13.2.4",
    "eslint-config-prettier": "^8.7.0",
    "highlight.js": "^11.7.0",
    "lucide-react": "^0.469.0",
    "microcms-js-sdk": "^3.1.2",
    "next": "^13.4.4",
    "prettier": "^2.8.4",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-share": "^5.1.2",
    "typescript": "4.9.5"
  },
  "devDependencies": {
    "license-checker": "^25.0.1",
    "next-sitemap": "^4.2.3",
    "pagefind": "^1.3.0"
  }
}
